<Application x:Class="WpfClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <FontFamily x:Key="Roboto Regular">pack://application:,,,/Resources/#Roboto Regular</FontFamily>
        <FontFamily x:Key="Roboto SemiBold">pack://application:,,,/Resources/#Roboto SemiBold</FontFamily>
        <FontFamily x:Key="Roboto Medium">pack://application:,,,/Resources/#Roboto Medium</FontFamily>
        <FontFamily x:Key="Roboto Light">pack://application:,,,/Resources/#Roboto Light</FontFamily>

        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Roboto Light" />
            <Setter Property="FontWeight" Value="Light" />
        </Style>
    </Application.Resources>
    
</Application>
